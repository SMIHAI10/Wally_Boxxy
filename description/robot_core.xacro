<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="base_link">
    </link>

    <link name="chassis">
        <visual>
            <origin xyz="0.3 0 0.1" rpy="0 0 0" />
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0.3 0 0.1" rpy="0 0 0" />
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
        </collision>
        <xacro:box_inertia m="5" x="0.6" y="0.4" z="0.2" o_xyz="0.3 0 0.1" o_rpy="0 0 0" />
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0 0.225 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
            <material name="purple" />
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
        </collision>
        <xacro:cylinder_inertia m="0.1" r="0.1" l="0.05" o_xyz="0 0 0" o_rpy="0 0 0" />
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="0 -0.225 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>

        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.1" />
            </geometry>
        </collision>
        <xacro:cylinder_inertia m="0.1" r="0.1" l="0.05" o_xyz="0 0 0" o_rpy="0 0 0" />
    </link>

    <joint name="base_link_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.1 0 0" rpy="0 0 0" />
    </joint>

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="caster_wheel" />
        <origin xyz="0.5 0 0" rpy="0 0 0" />
    </joint>

    <link name="caster_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.1" />
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.1" />
            </geometry>
        </collision>
        <xacro:sphere_inertia m="0.1" r="0.1" o_xyz="0 0 0" o_rpy="0 0 0" />
    </link>




</robot>